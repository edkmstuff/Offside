<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.offsidegame.offside">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_offside_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LoginActivity"
            android:label="Offside">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".JoinGameActivity" />

        <activity android:name=".ViewPlayerScoreActivity" />

        <activity
            android:name=".AnswerQuestionActivity"
            android:label="@string/ask_question" />
        <activity
            android:name=".ViewProcessedQuestionActivity"
            android:label="@string/processed_question_title" />
        <activity
            android:name=".ViewClosedQuestionActivity"
            android:label="@string/closed_question_title" />


        <service
            android:name=".helpers.SignalRService"
            android:exported="false" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />


    </application>

</manifest>