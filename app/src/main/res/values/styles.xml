<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="editTextClassic" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/colorWhite</item>
        <!--<item name="android:background">@android:drawable/edit_text</item>-->
        <item name="android:background">@color/transparentBackground</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>

    </style>


    <!-- Login Style -->

    <style name="BlueTheme" parent="AppTheme.Base">
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">#00B0FF</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/lobby_background</item>

    </style>

    <style name="LaunchScreenTheme" parent="AppTheme.Base">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">#00B0FF</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>

    </style>


    <!--Offside Styles-->

    <style name="OffsideAnswer" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">5sp</item>

    </style>

    <style name="OffsideAnswer.QuestionText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="OffsideActionButton">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/colorWhite</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <!--<item name="tabBackground">?attr/selectableItemBackground</item>-->
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorWhiteSemiTransparent</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/colorButton</item>
        <item name="android:textColor">@color/buttonTextColor</item>

    </style>

    <style name="GoldButton">
        <item name="android:background">@color/colorGold</item>
        <item name="android:textColor">@color/colorBlack</item>

    </style>

    <style name="questionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/questionTextColor</item>
    </style>

    <style name="answerText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/answerTextColor</item>
    </style>

    <style name="answerTextReturnValue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/answerTextColor</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="answerTextSelected">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/answerTextColor</item>
    </style>

    <style name="answerTextReturnValueSelected">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/answerTextColor</item>
        <item name="android:textStyle">bold</item>

    </style>






</resources>
