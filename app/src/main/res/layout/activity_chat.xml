<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_scoreboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:background="@color/chatPrimary"
    tools:context="com.offsidegame.offside.activities.ChatActivity"
    >



    <LinearLayout
        android:id="@+id/c_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Loading indicator-->
        <LinearLayout
            android:id="@+id/c_loading_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone">

            <ProgressBar
                android:layout_gravity="center"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </ProgressBar>

        </LinearLayout>
        <!--chat title root-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="22"
            android:background="@color/colorPrimaryDark"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Score"
                    android:textColor="@color/colorWhite"
                    />
                <TextView
                    android:id="@+id/c_score_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorWhite"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="12"
                android:gravity="center">

                <TextView
                    android:id="@+id/c_private_game_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorWhite"
                    />
                <TextView
                    android:id="@+id/c_game_title_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textColor="@color/colorWhite"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="5"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rank"
                    android:textColor="@color/colorWhite"
                    />
                <TextView
                    android:id="@+id/c_position_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1000/20000"
                    android:textColor="@color/colorWhite"
                    />


            </LinearLayout>
            
        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_content_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="8">
            <!--chat history-->
            <ListView
                android:id="@+id/c_chat_list_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:divider="@null"
                android:listSelector="@android:color/transparent"
                android:dividerHeight="0dp"
                android:stackFromBottom="true"
                android:transcriptMode="alwaysScroll">

            </ListView>
            <!--chat input window-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@color/colorAccent"
                android:gravity="center_vertical"
                android:weightSum="7"
                android:focusableInTouchMode="true">
                <TextView
                    android:id="@+id/c_chatActionsButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAccent"
                    android:textColor="@color/background_material_light"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="@dimen/OffsideLargeText"/>
                <EditText
                    android:id="@+id/c_chat_message_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_toLeftOf="@+id/chatSendButton"
                    android:inputType="textMultiLine"
                    style="@style/editTextClassic"
                    android:hint="type message" />

                <TextView
                    android:id="@+id/c_chatSendTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:textColor="@color/background_material_light"
                    android:gravity="center"
                    android:text="SEND"
                    android:textStyle="bold"

                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
