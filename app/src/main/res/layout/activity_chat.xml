                    <LinearLayout
                        android:id="@+id/c_action_leaders_root"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:minHeight="80dp"
                        android:minWidth="80dp"
                        android:orientation="vertical" >

                        <ImageView

                            android:layout_width="wrap_content"
