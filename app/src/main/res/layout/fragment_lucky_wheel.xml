<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.offsidegame.offside.fragments.ShopFragment"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layoutDirection="locale"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Try your luck"
            style="@style/titleText"
            android:gravity="center"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="16dp"

            >

            <github.hellocsl.cursorwheel.CursorWheelLayout
                android:id="@+id/flw_cursor_wheel_layout"
                android:layout_centerHorizontal="true"
                android:layout_width="240dp"
                android:layout_height="240dp"
                app:wheelCursorColor="@color/colorWhite"
                app:wheelCursorHeight="20dp"
                app:wheelItemRotateMode="none"
                app:wheelSelectedAngle="270"
                >

                <TextView
                    android:id="@id/id_wheel_menu_center_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lucky shot"
                    android:lines="2"
                    android:gravity="center"


                    />


            </github.hellocsl.cursorwheel.CursorWheelLayout>

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>
