<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:layoutDirection="ltr"
    tools:context="com.offsidegame.offside.activities.fragments.QuestionsFragment">

    <TextView
        android:id="@+id/question_question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        android:text="Am i a  very very very long question?"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:textSize="@dimen/OffsideMediumText"
        />

    <LinearLayout
        android:id="@+id/question_background_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/question_fb_picture"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                />

            <ImageView
                android:id="@+id/question_right_wrong_answer_indicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                />




            <!--Answer Text -->
            <TextView
                android:id="@+id/question_answer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/OffsideMediumText"
                android:text="some answer text"
                />






            <!--Right or Wrong -->


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="bottom"
            android:padding="2dp">



            <!-- Percent Users Answered-->
            <TextView
                android:id="@+id/question_answered_by_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_answered_by"
                android:textSize="@dimen/OffsideSmallText"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/question_percent_users_answered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/OffsideSmallText"/>

            <TextView
                android:id="@+id/question_percent_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="%"
                android:textSize="@dimen/OffsideSmallText"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/question_divider_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="@dimen/OffsideSmallText"
                android:paddingRight="5dp"/>


            <TextView
                android:id="@+id/question_you_can_earn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_value"
                android:textSize="@dimen/OffsideSmallText"
                android:paddingRight="5dp"/>

            <TextView
                android:id="@+id/question_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/OffsideSmallText"
                android:paddingRight="5dp"/>


            <TextView
                android:id="@+id/question_points_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_points"
                android:textSize="@dimen/OffsideSmallText"
                android:visibility="gone"
                />



        </LinearLayout>






    </LinearLayout>

</LinearLayout>
