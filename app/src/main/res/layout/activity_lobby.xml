                            android:paddingBottom="2dp"
                            android:paddingLeft="24dp"
                            android:paddingRight="44dp"
                            android:paddingTop="2dp"
                            android:text="4,000"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp"
                            android:gravity="center"/>

                        <ImageView
