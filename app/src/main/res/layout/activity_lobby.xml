<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_lobby"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    android:keepScreenOn="true"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context="com.offsidegame.offside.activities.LobbyActivity">

    <!--lobby root-->
    <LinearLayout

        android:id="@+id/l_lobby_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">



        <!--player info and settings-->
        <LinearLayout
            android:id="@+id/l_player_info_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="5dp"
            >
            <!--<ImageView-->
                <!--android:id="@+id/l_toggle_drawer_image_view"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/ic_action_news"-->
                <!--android:layout_weight="2"-->
                <!--/>-->
            <!--<ImageView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@mipmap/ic_app_logo_name_only"-->
                <!--android:layout_weight="2"-->
                <!--/>-->

            <!-- player status -->
            <LinearLayout
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <!-- profile picture-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/l_player_picture_image_view"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:scaleType="centerCrop"
                         />

                </LinearLayout>

                <!-- powers-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/l_power_items_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-14dp"
                        android:background="#50000000"
                        android:paddingBottom="2dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="2"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/c_power_item_image_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_soccer_ball" />

                </LinearLayout>

                <!-- coins -->
                <LinearLayout
                    android:id="@+id/l_balance_root"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:background="@color/colorButton"
                        android:gravity="center"
                        android:minWidth="20dp"
                        android:padding="2dp"
                        android:text="+"
                        android:textColor="@color/colorWhite"


                        />

                    <TextView
                        android:id="@+id/l_balance_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-12dp"
                        android:background="#50000000"
                        android:paddingBottom="2dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="4000"
                        android:textColor="@color/colorWhite" />

                    <ImageView
                        android:id="@+id/c_offside_coins_image_view"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/ic_coin" />

                </LinearLayout>


            </LinearLayout>

            <!--settings button-->
            <LinearLayout
                android:layoutDirection="rtl"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/l_settings_button_image_view"
                    android:layout_gravity="left"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_settings" />

            </LinearLayout>


        </LinearLayout>


        <!--*************************************************-->

        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <FrameLayout
            android:id="@+id/l_fragment_container_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:visibility="visible"
            android:orientation="vertical"
            android:layout_marginBottom="50dp"
            >
            <!--elements will be created here on run time -->
            <!--**PRIVATE GROUPS**-->
            <!--TBD**PROFILE**-->
            <!--TBD**SHOP**-->
            <!--**PLAY**-->
            <!--********-->

            </FrameLayout>

            <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
                android:id="@+id/l_bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom" />

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>





</LinearLayout>
