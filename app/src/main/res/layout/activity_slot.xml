<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chatPrimary"
    tools:context="com.offsidegame.offside.activities.SlotActivity"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/chatPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3"
        android:padding="50dp">



        <ImageView
            android:id="@+id/img1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/slot_adidas"

            />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/slot_adidas"

            />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/slot_adidas"

            />


    </LinearLayout>

    <Button
        android:id="@+id/s_start_slot_button"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="@string/lbl_start_slot"
        android:layout_gravity="center_horizontal"
        android:background="@color/answer3backgroundColor"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:gravity="center"
        />
    <Button
        android:id="@+id/s_go_back_to_chat_button"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="@string/lbl_back_to_game"
        android:layout_gravity="center_horizontal"
        android:background="@color/answer3backgroundColor"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:gravity="center"
        />




</LinearLayout>
