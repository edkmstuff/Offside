<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="com.offsidegame.offside.activities.ChatActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <!--INCOMING MESSAGES-->
        <LinearLayout
            android:id="@+id/cm_incoming_messages_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="visible"
            >

            <ImageView

                android:id="@+id/cm_incoming_profile_picture_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:orientation="vertical">


                <!-- Text messages-->
                <TextView
                    android:id="@+id/cm_incoming_text_message_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_incoming_bubble"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/chatText" />

                <!--Asked or Processed question root-->
                <LinearLayout
                    android:id="@+id/cm_incoming_question_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_incoming_bubble"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/chatText"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/cm_incoming_time_to_answer_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:max="15"
                        android:progress="3"
                        android:textColor="@color/colorWhite"
                        android:height="30dp"

                        android:progressDrawable="@drawable/progress_bar"
                        />
                    <TextView
                        android:id="@+id/cm_incoming_question_processed_question_time_expired_message_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_question_time_expired_message"
                        android:textColor="@color/answer4backgroundColor"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/cm_incoming_question_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/colorWhite"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="which team will score next?"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/OffsideMediumText"/>

                    <!--bet panel-->
                    <LinearLayout
                        android:id="@+id/cm_incoming_bet_panel_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layoutDirection="rtl"
                            android:gravity="center_vertical"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/lbl_bet_level"
                                />
                            <TextView
                                android:id="@+id/cm_incoming_bet_option1_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100"
                                android:background="@drawable/shape_bg_circle_selected"
                                android:width="50dp"
                                android:height="50dp"
                                android:gravity="center"
                                android:textColor="@color/privateGameTitle"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                />
                            <TextView
                                android:id="@+id/cm_incoming_bet_option2_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200"
                                android:background="@drawable/shape_bg_circle"
                                android:width="50dp"
                                android:height="50dp"
                                android:gravity="center"
                                android:textColor="@color/colorWhite"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"/>
                            <TextView
                                android:id="@+id/cm_incoming_bet_option3_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300"
                                android:background="@drawable/shape_bg_circle"
                                android:width="50dp"
                                android:height="50dp"
                                android:gravity="center"
                                android:textColor="@color/colorWhite"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/lbl_balance"
                                    />
                                <TextView
                                    android:id="@+id/cm_incoming_balance_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1500"/>
                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>
                    <TextView
                        android:id="@+id/cm_incoming_question_asked_not_enough_coins_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_not_enough_coins_to_play"
                        android:textColor="@color/answer1backgroundColor"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        />

                    <TextView
                        android:id="@+id/cm_incoming_question_processed_question_title_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_how_others_answered"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        />

                    <!--answers-->
                    <LinearLayout
                        android:id="@+id/cm_incoming_answers_root"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:layout_marginTop="5dp">

                        <LinearLayout
                            android:id="@+id/cm_incoming_answers_1_2_root"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:id="@+id/cm_incoming_answer_1_root"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:background="@color/answer1backgroundColor"
                                android:gravity="center"
                                android:minHeight="50dp"
                                android:orientation="vertical"

                                >

                                <TextView
                                    android:id="@+id/cm_incoming_answer_1_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="answer 1"
                                    android:textColor="@color/answerTextColor" />

                                <TextView
                                    android:id="@+id/cm_incoming_answer_1_return_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="to return"
                                    android:textColor="@color/answerTextColor"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/cm_incoming_answer_1_percent_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="20%"
                                    android:textColor="@color/answerTextColor"
                                    android:textSize="@dimen/OffsideMediumText"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/cm_incoming_answer_2_root"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:background="@color/answer2backgroundColor"
                                android:gravity="center"
                                android:minHeight="50dp"
                                android:orientation="vertical">

                                <TextView

                                    android:id="@+id/cm_incoming_answer_2_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="answer 2"
                                    android:textColor="@color/answerTextColor" />

                                <TextView
                                    android:id="@+id/cm_incoming_answer_2_return_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="to return"
                                    android:textColor="@color/answerTextColor"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/cm_incoming_answer_2_percent_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="30%"
                                    android:textColor="@color/answerTextColor"
                                    android:textSize="@dimen/OffsideMediumText"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cm_incoming_answers_3_4_root"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/cm_incoming_answer_3_root"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:background="@color/answer3backgroundColor"
                                android:gravity="center"
                                android:minHeight="50dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/cm_incoming_answer_3_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="answer 3"
                                    android:textColor="@color/answerTextColor" />

                                <TextView
                                    android:id="@+id/cm_incoming_answer_3_return_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="to return"
                                    android:textColor="@color/answerTextColor"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/cm_incoming_answer_3_percent_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15%"
                                    android:textColor="@color/answerTextColor"
                                    android:textSize="@dimen/OffsideMediumText"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/cm_incoming_answer_4_root"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:layout_weight="1"
                                android:background="@color/answer4backgroundColor"
                                android:gravity="center"
                                android:minHeight="50dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/cm_incoming_answer_4_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="1dp"
                                    android:layout_marginRight="1dp"
                                    android:text="answer 4"
                                    android:textColor="@color/answerTextColor" />

                                <TextView
                                    android:id="@+id/cm_incoming_answer_4_return_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="to return"
                                    android:textColor="@color/answerTextColor"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/cm_incoming_answer_4_percent_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25%"
                                    android:textColor="@color/answerTextColor"
                                    android:textSize="@dimen/OffsideMediumText"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>




                </LinearLayout>

                <!--processing question root-->
                <LinearLayout
                    android:id="@+id/cm_incoming_processing_question_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_incoming_bubble"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/chatText"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/cm_incoming_processing_question_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="which team will score next?"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/OffsideMediumText" />

                    <TextView
                        android:id="@+id/cm_incoming_selected_answer_title_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="10dp"
                        android:text="You think"
                        android:textColor="@color/colorBlack" />

                    <TextView
                        android:id="@+id/cm_incoming_selected_answer_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:minHeight="50dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="no"
                        android:textColor="@color/colorWhite" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/lbl_points"
                            android:textColor="@color/colorBlack" />

                        <TextView
                            android:id="@+id/cm_incoming_selected_answer_return_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="100"
                            android:textColor="@color/colorBlack"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:text="@string/lbl_you_can_earn"
                            android:textColor="@color/colorBlack"
                            />



                    </LinearLayout>





                </LinearLayout>

                <!--closed question root-->
                <LinearLayout

                    android:id="@+id/cm_incoming_closed_question_root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_incoming_bubble"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/chatText"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/cm_incoming_correct_wrong_title_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:background="@color/colorWhite"
                        android:gravity="center"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="Correct :)"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/OffsideMediumText" />


                    <TextView
                        android:id="@+id/cm_incoming_correct_answer_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:minHeight="50dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="no"
                        android:textColor="@color/colorWhite" />

                    <TextView
                        android:id="@+id/cm_incoming_correct_answer_return_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="You earned 100 points"
                        android:textColor="@color/colorBlack" />


                    <TextView
                        android:id="@+id/cm_incoming_feedback_player_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Good job!"
                        android:textColor="@color/colorBlack"
                        android:visibility="visible"

                        />

                </LinearLayout>


                <!--Time msg sent-->
                <TextView
                    android:id="@+id/cm_incoming_time_sent_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="5dp"
                    android:text="10:23"
                    android:textColor="@color/chatActions"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>

        <!-- OUTGOING -->
        <LinearLayout
            android:id="@+id/cm_outgoing_messages_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/cm_outgoing_profile_picture_image_view"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/cm_outgoing_text_message_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_bg_outgoing_bubble"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="This is a sample text"
                    android:textColor="@color/chatText"

                    />


                <TextView
                    android:id="@+id/cm_outgoing_time_sent_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="10:23"
                    android:textColor="@color/chatActions"
                    android:textSize="12dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
