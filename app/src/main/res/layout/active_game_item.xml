<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="com.offsidegame.offside.activities.LobbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="#50000000"
        android:minHeight="140dp">

        <LinearLayout
            android:id="@+id/ag_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!-- MATCH -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="4">

                <!--home team -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ag_home_team_logo_image_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/slot_heineken"
                        android:padding="4dp"
                        />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/ag_home_team_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOME TEAM"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/OffsideSmallText"
                        android:padding="2dp"

                        />


                </LinearLayout>

                <!-- game status and start time-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/ag_start_time_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/colorWhite"
                        android:text="21:45" />

                    <TextView
                        android:id="@+id/ag_start_date_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="4dp"
                        android:text="20/4/17" />

                    <!--JOIN GAME-->
                    <LinearLayout
                        android:id="@+id/ag_join_private_game_root"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlue"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/ag_join_private_game_button_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="כניסה למשחק"
                            android:textSize="16dp"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>
                    <!--CREATE GAME-->
                    <LinearLayout
                        android:id="@+id/ag_create_private_game_root"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorBlue"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/ag_create_private_game_button_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="פתח משחק"
                            android:textSize="16dp"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>


                </LinearLayout>

                <!--away team-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ag_away_team_logo_image_view"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/slot_heineken"
                        android:padding="4dp" />

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/ag_away_team_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOME TEAM"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/OffsideSmallText"
                        android:padding="2dp"

                        />

                </LinearLayout>


            </LinearLayout>

            <!--PLAYERS PLAYING THE GAME-->

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:id="@+id/ag_players_play_in_game_root"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:animateLayoutChanges="true"
                        android:gravity="center_vertical"
                        android:layoutDirection="ltr"
                        android:orientation="horizontal"
                        android:padding="5dp">

                    </LinearLayout>

                </HorizontalScrollView>
                <TextView
                    android:id="@+id/ag_players_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 חברים רשומים"
                    />








        </LinearLayout>

    </LinearLayout>


</LinearLayout>