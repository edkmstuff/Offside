<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp">

    <!-- for: Closed -->

    <!--Wrong Or Right-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Right or Wrong -->
        <ImageView
            android:id="@+id/right_wrong_answer_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--Answer Number-->
        <TextView
            android:id="@+id/answer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/OffsideMediumText" />

        <!--Answer Text -->
        <TextView
            android:id="@+id/answer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/OffsideMediumText" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Percent Users Answered-->
        <TextView
            android:id="@+id/answered_by_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_answered_by"
            android:textSize="@dimen/OffsideMediumText"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/percent_users_answered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/OffsideMediumText"/>

        <TextView
            android:id="@+id/percent_sign_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textSize="@dimen/OffsideMediumText"
            android:paddingRight="5dp"/>


        <TextView
            android:id="@+id/you_can_earn_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_can_earn"
            android:textSize="@dimen/OffsideMediumText"
            android:paddingRight="5dp"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/OffsideMediumText"
            android:paddingRight="5dp"/>


        <TextView
            android:id="@+id/points_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_points"
            android:textSize="@dimen/OffsideMediumText"
            />
        <!-- for: Processed, Closed -->
        <!--<ProgressBar-->
        <!--style="?android:attr/progressBarStyleHorizontal"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/progress_bar_percent_user_Answered"-->
        <!--android:layout_weight="1"-->
        <!--/>-->

        <!-- Score -->

        <!-- for: Processed, Closed -->
        <!--<TextView-->
        <!--style="@style/OffsideAnswer"-->
        <!--android:id="@+id/is_the_answer_of_the_user"/>-->

        <!-- for: Closed -->
        <!--<TextView-->
        <!--style="@style/OffsideAnswer"-->
        <!--android:id="@+id/is_correct"/>-->


    </LinearLayout>


</LinearLayout>
