<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/background_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/answer_question_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/round_corners_layout_background"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:id="@+id/answer_question_user_answer_image_view"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:scaleType="centerCrop" />

            <!--Answer Text -->
            <TextView
                android:id="@+id/answer_question_answer_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="some answer text"
                android:textColor="@color/windowBackground"
                android:textSize="@dimen/OffsideMediumText"
                 />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/processed_question_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/round_corners_layout_background"
            android:orientation="vertical"

            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/processed_question_user_answer_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop" />



                <TextView
                    android:id="@+id/processed_question_answer_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="some answer text"
                    android:textColor="@color/windowBackground"
                    android:textSize="@dimen/OffsideMediumText"

                     />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">



                <!-- Percent Users Answered-->

                <TextView
                    android:id="@+id/processed_question_answered_by_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_answered_by"
                    android:textSize="@dimen/OffsideMediumText"
                    android:textColor="@color/windowBackground"
                    android:paddingRight="5dp"/>
                <TextView
                    android:id="@+id/processed_question_percent_users_answered_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/windowBackground"
                    android:textColor="@color/colorPrimary"
                    android:minWidth="50dp"
                    android:text="100%"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/OffsideMediumText"/>







                <TextView
                    android:id="@+id/processed_question_you_can_earn_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/points_value"
                    android:textColor="@color/windowBackground"
                    android:textSize="@dimen/OffsideMediumText"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/processed_question_score_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/OffsideMediumText"
                    android:background="@color/windowBackground"
                    android:textColor="@color/colorPrimary"
                    android:minWidth="50dp"
                    android:padding="2dp"
                    android:gravity="center"
                    android:text="1000"
                    android:paddingRight="5dp"/>


                <TextView
                    android:id="@+id/processed_question_points_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_points"
                    android:textSize="@dimen/OffsideSmallText"
                    android:visibility="gone"
                    />



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/closed_question_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="@drawable/round_corners_layout_background"
            android:orientation="vertical"

            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/closed_question_user_answer_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/closed_question_right_wrong_answer_indicator_image_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="centerCrop"

                    />



                <TextView
                    android:id="@+id/closed_question_answer_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="some answer text"
                    android:textColor="@color/windowBackground"
                    android:textSize="@dimen/OffsideMediumText"

                     />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">



                <!-- Percent Users Answered-->
                <TextView
                    android:id="@+id/closed_question_answered_by_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/windowBackground"
                    android:text="@string/lbl_answered_by"
                    android:textSize="@dimen/OffsideMediumText"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/closed_question_percent_users_answered_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/windowBackground"
                    android:textColor="@color/colorPrimary"
                    android:minWidth="50dp"
                    android:text="100%"
                    android:padding="2dp"
                    android:gravity="center"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/OffsideMediumText"/>





                <TextView
                    android:id="@+id/closed_question_you_can_earn_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/windowBackground"
                    android:text="@string/points_value"
                    android:textSize="@dimen/OffsideMediumText"
                    android:paddingRight="5dp"/>

                <TextView
                    android:id="@+id/closed_question_score_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/OffsideMediumText"
                    android:background="@color/windowBackground"
                    android:textColor="@color/colorPrimary"
                    android:minWidth="50dp"
                    android:padding="2dp"
                    android:gravity="center"
                    android:text="1000"
                    android:paddingRight="5dp"/>


                <TextView
                    android:id="@+id/closed_question_points_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_points"
                    android:textSize="@dimen/OffsideSmallText"
                    android:visibility="gone"
                    />



            </LinearLayout>


        </LinearLayout>





    </LinearLayout>


</LinearLayout>
