<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bg_dialog_congrats"
    >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_congratulations"
            android:layout_gravity="center"
            android:fontFamily="@font/font_open_sans_hebrew_extra_bold"
            android:textSize="@dimen/OffsideLargeText"

            />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbl_pre_bonus_reward_message"
            android:layout_gravity="center"
            android:fontFamily="@font/font_open_sans_hebrew"
            android:textSize="@dimen/OffsideMediumText"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/dr_coin_image_view"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_coins_heap"

                />



            <TextView
                android:id="@+id/dr_reward_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:layout_gravity="center"
                android:textSize="@dimen/OffsideXXtraLargeText"
                android:fontFamily="@font/font_open_sans_hebrew_extra_bold"
                android:layout_marginRight="-8dp"

                />

        </LinearLayout>

        <Button
            android:id="@+id/dr_close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_dialog"
            android:gravity="center"

            android:textSize="@dimen/OffsideLargeText"
            android:fontFamily="@font/font_open_sans_hebrew"
            android:text="@string/lbl_collect"

            android:layout_marginTop="10dp"/>







</LinearLayout>