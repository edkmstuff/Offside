<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:gravity="center"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:padding="2dp"
    tools:context="com.offsidegame.offside.activities.LobbyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="#50000000"
        android:minHeight="140dp">

        <LinearLayout
            android:id="@+id/pg_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:orientation="vertical"
            android:layout_gravity="center"


            >

            <TextView
                android:id="@+id/pg_group_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/OffsideMediumText"
                android:textColor="@color/colorWhite"
                android:text="the sharks"
                />
            <TextView
                android:id="@+id/pg_group_game_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="משחק פעיל"
                android:textColor="@color/colorWhite"
                android:background="@color/colorActive"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:id="@+id/pg_players_play_in_group_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:gravity="center_vertical"
                    android:layoutDirection="ltr"
                    android:orientation="horizontal"
                    android:padding="5dp">

                </LinearLayout>

            </HorizontalScrollView>



            <TextView
                android:id="@+id/pg_total_playing_players_in_group_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/colorWhite"
                android:text="12 חברים כבר משחקים"
                android:layout_marginTop="4dp"
                android:padding="5dp"
                />


        </LinearLayout>

    </LinearLayout>










</LinearLayout>