<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@drawable/shape_bg_league_record_odd"
    android:layoutDirection="locale" >
    <LinearLayout
        style="@style/LinearLayoutHorizontalWidthMatchHeightWrap"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/bg_button_dialog"
        android:weightSum="2"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="0dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <ImageView
                android:id="@+id/digpa_player_image_view"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                android:scaleType="centerCrop"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/digpa_player_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="player name"
                android:paddingLeft="8dp"
                style="@style/playerActivityTitleText"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/digpa_player_accuracy_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                style="@style/playerActivityTitleText"
                />
            <TextView
                android:id="@+id/digpa_player_total_answered_to_total_question_asked_ratio_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="10/20"
                style="@style/playerActivityTitleText"
                />

        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        style="@style/LinearLayoutHorizontalWidthMatchHeightWrap"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"

        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_soccer_ball"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_coin"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"
        android:alpha="0.5"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        >

        <LinearLayout
            android:id="@+id/digpa_player_activities_container_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <!--list of player activities will be written programatically-->

        </LinearLayout>
    </ScrollView>


        <Button
            android:id="@+id/digpa_close_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/bg_button_dialog"
            android:gravity="center"
            android:textSize="@dimen/OffsideSmallText"
            android:fontFamily="@font/font_open_sans_hebrew"
            android:text="@string/lbl_close"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />







</LinearLayout>