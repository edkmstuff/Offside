<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_processed_question"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:keepScreenOn="true"
    tools:context="com.offsidegame.offside.activities.ViewProcessedQuestionActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layoutDirection="rtl"
        android:weightSum="4">
        <TextView
            android:id="@+id/question_text"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:text="Am i a  very very very long question?"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/OffsideMediumText">

        </TextView>
        <TextView
            android:id="@+id/timeToStartQuestionText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="10"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
            android:textSize="@dimen/OffsideLargeText"
            android:gravity="center">

        </TextView>

    </LinearLayout>






    <fragment
        android:id="@+id/activity_answers_fragment"
        android:name="com.offsidegame.offside.activities.fragments.AnswersFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/answer_list_item">

    </fragment>
</LinearLayout>
