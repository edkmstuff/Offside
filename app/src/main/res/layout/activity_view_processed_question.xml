<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_processed_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context="com.offsidegame.offside.activities.ViewProcessedQuestionActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <!--Questions and answer root-->
        <LinearLayout
            android:id="@+id/vpq_question_and_answers_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_background_border"
            android:orientation="vertical"
            android:tag="question_and_answers_root"
            android:visibility="gone">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layoutDirection="rtl"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/question_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Am i a  very very very long question?"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/OffsideMediumText">

                </TextView>

                <TextView
                    android:id="@+id/vpq_time_to_go_back_to_player_score_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:text="10"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/OffsideLargeText">

                </TextView>

            </LinearLayout>


            <fragment
                android:id="@+id/activity_answers_fragment"
                android:name="com.offsidegame.offside.activities.fragments.AnswersFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/answer_list_item">

            </fragment>
        </LinearLayout>

        <!-- before answer processed pop up -->
        <LinearLayout
            android:id="@+id/vpq_processed_question_note_promo_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_background_border"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:layoutDirection="rtl"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/lbl_statistics_collection_completed_for_question"
                    android:textSize="@dimen/OffsideMediumText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question text"
                    android:textSize="@dimen/OffsideLargeText" />


            </LinearLayout>


            <!--Sponsered by-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_sponsored_by" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="50dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/heineken" />

            </LinearLayout>


        </LinearLayout>


    </FrameLayout>
</LinearLayout>
