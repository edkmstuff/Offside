<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.offsidegame.offside.AnswerQuestionActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/OffsideLargeText"
            android:text="Am i a  very very very long question?"
            android:padding="20dp"
            android:id="@+id/question_text">

        </TextView>








    <fragment
        android:id="@+id/activity_answers_fragment"
        android:name="com.offsidegame.offside.AnswersFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/answer_list_item">

    </fragment>


</LinearLayout>
