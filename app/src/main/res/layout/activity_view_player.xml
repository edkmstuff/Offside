<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chatPrimary"
        android:orientation="vertical"
        tools:context="com.offsidegame.offside.activities.ViewPlayerActivity">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical" >

     <ImageView
         android:id="@+id/jg_player_picture_image_view"
         android:layout_width="100dp"
         android:layout_height="100dp"
         android:src="@drawable/logo"
         android:layout_gravity="center"
         android:scaleType="centerCrop"
         android:layout_marginTop="20dp"/>

     <TextView
         android:id="@+id/jg_user_name_text_view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="דני רובסט"
         android:textColor="@color/grayText"
         android:textSize="@dimen/OffsideMediumText"
         android:layout_gravity="center"
         />

     <View
         android:layout_width="match_parent"
         android:layout_height="4dp"
         android:background="@color/chatText"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         />
 </LinearLayout>

    <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_margin="10dp">

        <!--offsideCoins-->

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical" >
             <!--offsideCoins experience-->
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_gravity="center">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="Beginner"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="150"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     android:textSize="@dimen/OffsideXtraLargeText"
                     />

             </LinearLayout>


         </LinearLayout>

         <!--line 1-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="2"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp">
             <!--overall position-->
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:background="@drawable/shape_bg_rectangle_border_left">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="POSITION"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="50"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     android:textSize="@dimen/OffsideLargeText"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="150,000"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     android:textSize="@dimen/OffsideMediumSmallText"
                     />

             </LinearLayout>
             <!--trophies-->
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:background="@drawable/shape_bg_rectangle_border_left">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="TROPHIES"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="2"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"

                     android:textSize="@dimen/OffsideLargeText"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="2 months ago"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"

                     android:textSize="@dimen/OffsideMediumSmallText"
                     />

             </LinearLayout>

         </LinearLayout>
         <!--Line 2-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="2"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp">
             <!--game played-->
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:background="@drawable/shape_bg_rectangle_border_left">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="GAME PLAYED"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="50"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     android:textSize="@dimen/OffsideLargeText"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="1 week ago"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"

                     android:textSize="@dimen/OffsideMediumSmallText"
                     />

             </LinearLayout>
             <!--Avergae position-->
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:background="@drawable/shape_bg_rectangle_border_left">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="AVERAGE POSITION"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="2nd"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"

                     android:textSize="@dimen/OffsideLargeText"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="8th"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"

                     android:textSize="@dimen/OffsideMediumSmallText"
                     />

             </LinearLayout>



         </LinearLayout>
         <!--Line 3-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:weightSum="2"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="10dp">
             <!--best result-->
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:background="@drawable/shape_bg_rectangle_border_left">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="BEST RESULT"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="7500"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     android:textSize="@dimen/OffsideLargeText"
                     />

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="3100"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"

                     android:textSize="@dimen/OffsideMediumSmallText"
                     />

             </LinearLayout>
             <!--best earn-->
             <LinearLayout
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:background="@drawable/shape_bg_rectangle_border_left">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="BEST EARN"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="7000"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"

                     android:textSize="@dimen/OffsideLargeText"
                     />
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:text="2 months ago"
                     android:textColor="@color/colorWhite"
                     android:gravity="center"

                     android:textSize="@dimen/OffsideMediumSmallText"
                     />

             </LinearLayout>



         </LinearLayout>




     </LinearLayout>












</LinearLayout>

