<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.offsidegame.offside.adapters.PlayerActivityAdapter"
    android:id="@+id/pai_root"
    >

    <LinearLayout
        android:id="@+id/pai_player_activities_root"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/pai_question_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="this is the question"
            style= "@style/playerActivityText"
            android:gravity="start|center_vertical"
            android:lines="2"
            />

        <TextView
            android:id="@+id/pai_answer_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Barcelona"
            style= "@style/playerActivityText"
            />

        <TextView
            android:id="@+id/pai_bet_size_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20"
            style= "@style/playerActivityText"/>

        <TextView
            android:id="@+id/pai_potential_earn_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100"
            style= "@style/playerActivityText"/>

    </LinearLayout>

    <!-- separator line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhite"
        android:alpha="0.5"
        />




</LinearLayout>
