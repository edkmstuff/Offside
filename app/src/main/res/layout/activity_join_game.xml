<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:keepScreenOn="true"
    tools:context="com.offsidegame.offside.activities.JoinGameActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:text="@string/lbl_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/OffsideMediumText"
            />

        <TextView
            android:text="Danny Robust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/join_game_user_name_text_view"
            android:layout_marginRight="2dp"
            android:textSize="@dimen/OffsideMediumText"

            />
        <TextView
            android:text="!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/OffsideMediumText"

            />

    </LinearLayout>


    <ImageView
        android:id="@+id/userPictureImageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        />





    <EditText

        android:id="@+id/gameCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Game code"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Join" />

</LinearLayout>
