<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_join_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.offsidegame.offside.activities.JoinGameActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar"
        />

    <TextView
        android:text="@string/lbl_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:text="FB Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbNameTextView"
        android:layout_gravity="center"
        android:textSize="@dimen/fab_margin"
        />

    <ImageView
        android:id="@+id/userPictureImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <!--<com.facebook.login.widget.ProfilePictureView-->
        <!--android:id="@+id/fbPictureImageView"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_gravity="center"-->

        <!--/>-->


    <EditText

        android:id="@+id/gameCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/join_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Join" />

</LinearLayout>
