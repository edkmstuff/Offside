<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <!-- Progress bar -->
        <include layout="@layout/shared_loading"
            android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/fg_groups_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--app title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/fg_logout_button_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:minHeight="50dp"
                android:padding="5dp"
                android:text="@string/lbl_sign_out"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/OffsideMediumText"

                android:visibility="visible"
                android:layout_weight="4"

                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_app_logo_name_only"
                android:layout_weight="4"/>

            <TextView
                android:id="@+id/fg_create_private_group_button_text_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="50dp"
                android:padding="5dp"
                android:text="@string/lbl_create_private_group"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/OffsideMediumText"
                android:textDirection="rtl"
                android:visibility="visible"
                android:layout_weight="4"
                />

        </LinearLayout>
        <!--create  group button-->
        <LinearLayout
            android:id="@+id/fg_create_private_group_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <!--<TextView-->
                <!--android:id="@+id/fg_create_private_group_button_text_view"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center_vertical"-->
                <!--android:minHeight="50dp"-->
                <!--android:padding="5dp"-->
                <!--android:text="@string/lbl_create_private_group"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textStyle="bold"-->
                <!--android:textSize="@dimen/OffsideMediumText"-->
                <!--android:textDirection="rtl"-->
                <!--android:visibility="visible"-->

                <!--/>-->

        </LinearLayout>
        <android.support.design.widget.TabLayout
            android:id="@+id/fg_groups_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:tabMode="fixed"
            app:tabGravity="fill"
            />

        <android.support.v4.view.ViewPager
            android:id="@+id/fg_tabs_container_view_pager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fg_groups_tab_layout"
            android:layout_centerHorizontal="true"
            >
        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>